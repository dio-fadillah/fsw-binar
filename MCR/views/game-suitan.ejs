<html lang="en">
  <head>
    <%- include("partials/head"); %>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</head>
<body>
  <!--navbar-->
  <div class="container-fluid" style="background-color:black; opacity: 0.8;">
    <div class="wrapper-2">
      <div class="upper-link" id="kembali">
       <a href="/"><ion-icon name="arrow-back-outline" size="large"></ion-icon></a>
      </div>

      <div class="upper-link">
        <img class="upper-suit" src="/images/games/favpng_rock-paper-scissors-steemit-logo.png">
      </div><div class="wrapper-2"></div>

      <div class="upper-link" style="margin-top: 1rem;" id="kembali"><p>ROCK PAPER SCISSOR</p></div>
    </div>
  </div>
  <!--end of navbar-->

  <!--Gunting Batu Kertas Area-->
  <div class="container-game">
    <div class="wrapper wrapper-3">
      <div class="user">
        
        <div class="box-4">
          <p><%= username %></p>
        </div>
        
        <div class="box-3" id="batu-p" value='batu'>
          <img class="suit" src="/images/games/batu.png">
        </div>

        <div class="box-3" id="kertas-p" value='kertas'>
          <img class="suit" src="/images/games/kertas.png"></div>

        <div class="box-3" id="gunting-p" value='gunting'>
          <img class="suit" src="/images/games/gunting.png"></div>
      </div>
      <!--End of Player Area-->

      <!--Result Area-->
      <div class="mid">
        <div class="result" id="hasil">VS</div>
      </div>   
      <!--End of Result Area-->

      <div class="com">
         <!--COM Area-->
        <div class="box-4">
          <p>COM</p>
        </div>
        
        <div class="box-3" id="batu-c" value='batu'>
          <img class="suit" src="/images/games/batu.png">
        </div>

        <div class="box-3" id="kertas-c" value='kertas'>
          <img class="suit" src="/images/games/kertas.png">
        </div>

        <div class="box-3" id="gunting-c" value='gunting'>
          <img class="suit" src="/images/games/gunting.png">
        </div>   
        <!--End of COM Area-->
      </div>
    </div>
  </div>

  <!--End of Gunting Batu Kertas Area-->

  <!--refresh Area-->
  <div class="container-game">
    <div class="wrapper wrapper-3">
      <div class="refresh">
        <div class="box-2" id="refresh">
          <img class ="ref-btn" src="/images/games/refresh.png" id="refresh-p-click">
        </div>  
      </div>   
  </div>
  <!--end of refresh Area-->


 
  <script src="/javascripts/game-suit.js"></script>


</body>
</html>