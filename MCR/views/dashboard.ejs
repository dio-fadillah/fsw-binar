<html>
    <head>
        <%- include("partials/head"); %>
    </head>
<body>

    <table style="width: 100%;">
        <tr>
            <a href="/register" class="btn btn-primary">Create</a>
        </tr>

        <tr>
            <th>id</th>
            <th>Username</th>
            <th>Password</th>
            <th>Role</th>
            <th>action</th>
        </tr>
    
        <% users.forEach(i => { %>
            <tr>
                <td><%= i.id %></td>
                <td><%= i.username %></td>
                <td><%= i.password %></td>
                <td><%= i.role %></td>
            
            <td>
                <a href="/edit/<%= i.id %>" class="btn btn-primary">Edit</a>
                <a href="/delete/<%= i.id %>" class="btn btn-warning">Delete</a>
            </td>
            </tr>
            <% }) %>

            <tr>
                <a href="/logout" class="btn btn-primary">Logout</a>
            </tr>
    </table>


</body>
</html>